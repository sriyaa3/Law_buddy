# Application Settings
PROJECT_NAME="AI Law Buddy - Empowering MSMEs with Legal Compliance"
API_V1_STR=/api/v1
APP_PORT=8001
SECRET_KEY=change-in-production-to-secure-random-string
DEBUG=False

# Google Gemini API (Required for LLM calculations)
# Get your API key from: https://ai.google.dev/
GOOGLE_API_KEY=your_gemini_api_key_here

# Database
DATABASE_URL=sqlite:///./ai_law_buddy.db

# Optional: Upstash Redis (for caching)
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Optional: Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Model Paths (for local models - optional)
MODEL_DIR=./models
PHI3_MODEL_PATH=./models/phi-3-mini-4k-instruct-q4.gguf
MISTRAL_MODEL_PATH=./models/mistral-7b-instruct-v0.2.Q4_K_M.gguf

# Privacy Settings
ENABLE_DIFFERENTIAL_PRIVACY=True
PRIVACY_EPSILON=1.0
PRIVACY_DELTA=0.00001
SENSITIVITY_THRESHOLD=0.7

# Performance Settings
MAX_WORKERS=4
CACHE_SIZE=1000
MAX_CONTEXT_LENGTH=4096
BATCH_SIZE=8

# Retrieval Settings
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.75
HYBRID_ALPHA=0.5

# Model Inference Settings
TEMPERATURE=0.7
MAX_TOKENS=512
TOP_P=0.9

# Directory Settings
UPLOAD_FOLDER=./uploads
DATA_DIR=./data
VECTOR_DB_PATH=./data/vector_db
LEGAL_DATA_PATH=./data/legal_documents
TEMPLATE_DIR=./templates
